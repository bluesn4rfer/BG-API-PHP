{
  "openapi": "3.0.2",
  "info": {
    "title": "bluegunn API - OpenAPI 3.0",
    "contact": { "email": "ryangunn313@gmail.com" },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "0.04"
  },
  "servers": [{ "url": "/" }],
  "tags": [
    {
      "name": "Words"
    }
  ],
  "paths": {
    "/words": {
      "post": {
        "tags": ["Words"],
        "summary": "Create words",
        "description": "Add new words",
        "operationId": "createWords",
        "requestBody": {
          "description": "Create new words",
          "content": {
            "application/json": {
              "schema": { "type": "array", "items": { "type": "string" }, "example": ["dog","cat","bird"] }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "message": { "type": "string", "example": "Created words" },
                    "data": { 
                      "type": "array", 
                      "items": { "$ref": "#/components/schemas/Word" }, 
                      "example": [
                        { "id":1, "word":"dog" },
                        { "id":2, "word":"cat" },
                        { "id":3, "word":"bird" },
                        { "id":4, "word":"fish" }
                      ] 
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Bad Request" }
        },
        "security": [{ "auth": ["create:words"] }]
      },       
      "get": {
        "tags": ["Words"],
        "summary": "Read words",
        "description": "Returns a list of words",
        "operationId": "readWords",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "message": { "type": "string", "example": "Read words" },
                    "data": { 
                      "type": "array", 
                      "items": { "$ref": "#/components/schemas/Word" }, 
                      "example": [
                        { "id":1, "word":"dog" },
                        { "id":2, "word":"cat" },
                        { "id":3, "word":"bird" }
                      ] 
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Bad Request" }
        },
        "security": [{ "auth": ["read:words"] }]
      },     
      "put": {
        "tags": ["Words"],
        "summary": "Update words",
        "description": "Update existing words by Id",
        "operationId": "updateWords",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Word" }, 
                "example": [
                  { "id":2, "word":"fish" },
                  { "id":3, "word":"frog" }
                ] 
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "message": { "type": "string", "example": "Updated words" },
                    "data": { 
                      "type": "array", 
                      "items": { "$ref": "#/components/schemas/Word" }, 
                      "example": [
                        { "id":1, "word":"dog" },
                        { "id":2, "word":"fish" },
                        { "id":3, "word":"frog" }
                      ] 
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Bad Request" }
        },
        "security": [{ "auth": ["update:words"] }]
      },
      "delete": {
        "tags": ["Words"],
        "summary": "Delete words",
        "description": "Delete words by Id",
        "operationId": "deleteWords",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "type": "array", "items": { "type": "integer", "format": "int32" }, "example": [2,3] }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "message": { "type": "string", "example": "Deleted words" },
                    "data": { 
                      "type": "array", 
                      "items": { "$ref": "#/components/schemas/Word" }, 
                      "example": [
                        { "id":1, "word":"dog" },
                        { "id":4, "word":"fish" }
                      ] 
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Bad Request" } 
        },
        "security": [{ "auth": ["delete:words"] }]
      }      
    }
  },
  "components": {
    "schemas": {     
      "Word": {
        "required": ["id","word"],
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int32", "example": 10 },
          "word": { "type": "string", "example": "doggie" }
        }
      }
    },
    "securitySchemes": {
      "auth": {
        "type": "oauth2",
        "flows": {
          "implicit": {
            "authorizationUrl": "https://api.bluegunn.com/auth",
            "scopes": {
              "write:words": "add, edit, delete words",
              "read:words": "read words"
            }
          }
        }
      },
      "api_key": { "type": "apiKey", "name": "api_key", "in": "header" }
    }
  }
}
